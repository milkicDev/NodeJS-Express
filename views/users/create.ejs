<div class="container py-5">
    <div class="w-50">
        <%- include('../partials/errors.ejs') %>
    </div>

    <div class="card shadow bg-white mx-auto border-0" style="max-width: 600px;">
        <div class="card-body">
            <div class="text-center">
                <h5 class="card-title mb-0 text-primary text-uppercase">Create New User</h5>
                <p class="small">Please enter the information below!</p>
            </div>
            <hr class="w-50">

            <form action="/users/store" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" type="text" name="username" class="form-control">
                </div>

                <div class="form-group">
                    <label for="firstName">First name</label>
                    <input id="firstName" type="text" name="firstName" class="form-control">
                </div>

                <div class="form-group">
                    <label for="lastName">Last name</label>
                    <input id="lastName" type="text" name="lastName" class="form-control">
                </div>

                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input id="email" type="text" name="email" class="form-control">
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" type="text" name="password" class="form-control">
                </div>

                <div class="my-4 text-right form-group">
                    <a href="/users" class="btn btn-link text-dark text-uppercase">Back</a>
                    <button class="btn btn-outline-primary text-uppercase" type="submit">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>